:8000 {
    root * /var/www/public
    php_fastcgi 127.0.0.1:9000 {
        index index.php
    }
    file_server
    encode gzip
    log
    
    # Rotas da API
    route /api* {
        php_fastcgi 127.0.0.1:9000 {
            index index.php
        }
    }
    
    # Rota de health check
    route /health {
        php_fastcgi 127.0.0.1:9000 {
            index index.php
        }
    }
}